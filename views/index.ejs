            <script>
                // Data from Server (Parsed safely without lint errors)
                const serverDataElement = document.getElementById('server-data');
                const serverData = JSON.parse(serverDataElement.textContent);
                const camerasData = serverData.cameras;
                const hlsPort = serverData.hlsPort;
                let map = null;

                function switchView(mode) {
                    const gridView = document.getElementById('cctv-grid');
                    const mapView = document.getElementById('mapView');
                    const btnGrid = document.getElementById('btn-grid');
                    const btnMap = document.getElementById('btn-map');

                    if (mode === 'grid') {
                        gridView.classList.remove('hidden');
                        mapView.classList.add('hidden');
                        btnGrid.classList.add('view-active');
                        btnGrid.classList.remove('text-gray-400');
                        btnMap.classList.remove('view-active');
                        btnMap.classList.add('text-gray-400');
                    } else {
                        gridView.classList.add('hidden');
                        mapView.classList.remove('hidden');
                        btnMap.classList.add('view-active');
                        btnMap.classList.remove('text-gray-400');
                        btnGrid.classList.remove('view-active');
                        btnGrid.classList.add('text-gray-400');

                        // Init map if not already done
                        if (!map) {
                            initMap();
                        } else {
                            setTimeout(() => map.invalidateSize(), 100);
                        }
                    }
                }

                function initMap() {
                    // Default center (Jakarta) or first camera location
                    let center = [-6.2088, 106.8456];
                    const validCam = camerasData.find(c => c.lat && c.lng);
                    if (validCam) {
                        center = [validCam.lat, validCam.lng];
                    }

                    map = L.map('map').setView(center, 13);

                    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors',
                        maxZoom: 19
                    }).addTo(map);

                    camerasData.forEach(cam => {
                        if (cam.lat && cam.lng) {
                            const marker = L.marker([cam.lat, cam.lng]).addTo(map);

                            // Popup Content with Video Player
                            const popupContent = `
                        <div style="width: 300px;">
                            <h3 class="font-bold text-lg mb-2">${cam.nama}</h3>
                            <p class="text-xs text-gray-500 mb-2">${cam.lokasi}</p>
                            <div class="relative w-full aspect-video bg-black rounded overflow-hidden">
                                <video id="map-video-${cam.id}" class="w-full h-full object-cover" controls autoplay muted playsinline></video>
                            </div>
                        </div>
                    `;

                            marker.bindPopup(popupContent);

                            // Init Video on Popup Open
                            marker.on('popupopen', () => {
                                const video = document.getElementById(`map-video-${cam.id}`);
                                const baseUrl = window.location.protocol + '//' + window.location.hostname + ':' + hlsPort;
                                const transcodedSrc = baseUrl + '/cam_' + cam.id + '/index.m3u8';
                                const fallbackSrc = baseUrl + '/cam_' + cam.id + '_input/index.m3u8';

                                if (Hls.isSupported()) {
                                    const hls = new Hls();
                                    hls.loadSource(transcodedSrc);
                                    hls.attachMedia(video);
                                    hls.on(Hls.Events.ERROR, function (event, data) {
                                        if (data.fatal && data.type === Hls.ErrorTypes.NETWORK_ERROR) {
                                            hls.destroy();
                                            const hlsFallback = new Hls();
                                            hlsFallback.loadSource(fallbackSrc);
                                            hlsFallback.attachMedia(video);
                                            hlsFallback.on(Hls.Events.MANIFEST_PARSED, () => video.play());
                                        }
                                    });
                                    hls.on(Hls.Events.MANIFEST_PARSED, () => video.play());
                                } else if (video.canPlayType('application/vnd.apple.mpegurl')) {
                                    video.src = fallbackSrc; // Safari supports fMP4/HEVC natively usually
                                    video.addEventListener('loadedmetadata', () => video.play());
                                }
                            });
                        }
                    });
                }
            </script>

            <script>
                // --- Weather Widget Logic ---
                async function initWeather() {
                    // Default Jakarta
                    let lat = -6.2088;
                    let lng = 106.8456;

                    // Try to find location from cameras
                    if (typeof camerasData !== 'undefined' && camerasData.length > 0) {
                        const cam = camerasData.find(c => c.lat && c.lng);
                        if (cam) {
                            lat = cam.lat;
                            lng = cam.lng;
                        }
                    }

                    try {
                        const res = await fetch(`https://api.open-meteo.com/v1/forecast?latitude=${lat}&longitude=${lng}&current_weather=true`);
                        const data = await res.json();
                        const weather = data.current_weather;

                        // Parse Weather Code
                        // WMO Weather interpretation codes (WW)
                        const code = weather.weathercode;
                        let icon = 'üå§Ô∏è';
                        let desc = 'Cerah';

                        if (code <= 3) { icon = 'üå§Ô∏è'; desc = 'Cerah/Berawan'; }
                        else if (code <= 48) { icon = 'üå´Ô∏è'; desc = 'Kabut'; }
                        else if (code <= 67) { icon = 'üåßÔ∏è'; desc = 'Hujan'; }
                        else if (code <= 77) { icon = 'üå®Ô∏è'; desc = 'Salju'; }
                        else if (code <= 82) { icon = '‚õàÔ∏è'; desc = 'Hujan Deras'; }
                        else if (code <= 99) { icon = '‚ö°'; desc = 'Badai Petir'; }

                        document.getElementById('weather-icon').innerText = icon;
