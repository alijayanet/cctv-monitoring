                                var transcodedSrc = baseUrl + '/cam_<%= camera.id %>/index.m3u8';
                                var fallbackSrc = baseUrl + '/cam_<%= camera.id %>_input/index.m3u8';
                                var usedFallback = false;

                                function initHls(src) {
                                    if (Hls.isSupported()) {
                                        var hls = new Hls({
                                            debug: false,
                                            lowLatencyMode: true,
                                            manifestLoadingTimeOut: 5000,
                                            manifestLoadingMaxRetry: 2,
                                            manifestLoadingRetryDelay: 1000
                                        });
