            <script>
                // Global Status Polling
                async function updateStatus() {
                    try {
                        const response = await fetch('/api/status');
                        const data = await response.json();

                        Object.keys(data.cameras).forEach(id => {
                            const status = data.cameras[id];
                            const dot = document.getElementById(`status-dot-${id}`);
                            const text = document.getElementById(`status-text-${id}`);

                            if (dot && text) {
                                if (status.online) {
                                    dot.classList.remove('bg-gray-600', 'bg-red-500', 'bg-purple-500');
                                    const tc = data.transcode && data.transcode[id];
                                    if (tc && tc.transcoded) {
                                        dot.classList.add('bg-purple-500', 'animate-pulse');
                                        text.innerText = 'H.264';
                                        text.classList.remove('text-gray-500', 'text-red-500', 'text-green-500');
                                        text.classList.add('text-purple-400');
                                    } else {
                                        dot.classList.add('bg-green-500', 'animate-pulse');
                                        text.innerText = 'ONLINE';
                                        text.classList.remove('text-gray-500', 'text-red-500', 'text-purple-400');
                                        text.classList.add('text-green-500');
                                    }
                                } else {
                                    dot.classList.remove('bg-gray-600', 'bg-green-500', 'bg-purple-500', 'animate-pulse');
                                    dot.classList.add('bg-red-500');
                                    text.innerText = 'OFFLINE';
                                    text.classList.remove('text-gray-500', 'text-green-500', 'text-purple-400');
                                    text.classList.add('text-red-500');
                                }
                            }
                        });
                    } catch (err) {
                        console.error('Status poll error:', err);
                    }
                }

                setInterval(updateStatus, 10000);
                updateStatus();

                // Fullscreen per kamera (dashboard)
                function toggleCamFullscreen(containerId) {
                    const el = document.getElementById(containerId);
                    if (!el) return;
                    if (!document.fullscreenElement) {
                        el.requestFullscreen().catch(function (err) { console.log('Fullscreen error', err); });
                    } else {
                        document.exitFullscreen();
                    }
                }

                // Snapshot function
                function takeSnapshot(cameraId, cameraName) {
                    const video = document.getElementById('video-' + cameraId);
                    if (!video || video.readyState < 2) {
                        alert('Video not ready yet. Please wait for the stream to load.');
                        return;
                    }

                    const canvas = document.createElement('canvas');
                    canvas.width = video.videoWidth || 1280;
                    canvas.height = video.videoHeight || 720;
                    const ctx = canvas.getContext('2d');
                    ctx.drawImage(video, 0, 0, canvas.width, canvas.height);

                    // Add timestamp overlay
                    ctx.fillStyle = 'rgba(0, 0, 0, 0.5)';
                    ctx.fillRect(10, canvas.height - 40, canvas.width - 20, 30);
                    ctx.fillStyle = '#ffffff';
                    ctx.font = '16px Arial';
                    ctx.fillText(cameraName + ' - ' + new Date().toLocaleString('id-ID'), 20, canvas.height - 20);

                    // Download image
                    const link = document.createElement('a');
                    link.download = `snapshot_${cameraName.replace(/\s+/g, '_')}_${Date.now()}.png`;
                    link.href = canvas.toDataURL('image/png');
                    link.click();
                }

                // Register Service Worker for PWA
                if ('serviceWorker' in navigator) {
                    window.addEventListener('load', () => {
                        navigator.serviceWorker.register('/sw.js')
                            .then((registration) => {
                                console.log('SW registered:', registration);
                            })
                            .catch((error) => {
                                console.log('SW registration failed:', error);
                            });
                    });
                }
            </script>

