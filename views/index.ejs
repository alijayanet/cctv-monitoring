                                        hls.attachMedia(video);
                                        hls.on(Hls.Events.MANIFEST_PARSED, function () {
                                            video.play().catch(function (e) { console.log('Autoplay blocked', e); });
                                        });
                                        hls.on(Hls.Events.ERROR, function (event, data) {
                                            if (data.fatal) {
                                                switch (data.type) {
                                                    case Hls.ErrorTypes.NETWORK_ERROR:
                                                        // If transcoded stream not available, try raw input
                                                        if (!usedFallback && src === transcodedSrc) {
                                                            console.log('Transcoded stream not available for cam_<%= camera.id %>, trying raw input...');
                                                            usedFallback = true;
                                                            hls.destroy();
                                                            initHls(fallbackSrc);
                                                        } else {
                                                            // Already on fallback or fallback stream, retry
                                                            setTimeout(function () { hls.startLoad(); }, 3000);
                                                        }
                                                        break;
                                                    case Hls.ErrorTypes.MEDIA_ERROR:
                                                        hls.recoverMediaError();
                                                        break;
                                                    default:
                                                        hls.destroy();
                                                        break;
                                                }
                                            }
                                        });
                                    } else if (video.canPlayType('application/vnd.apple.mpegurl')) {
