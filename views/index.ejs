        .running-text-content {
            display: inline-block;
            padding-left: 100%;
            animation: marquee 30s linear infinite;
            font-weight: 500;
            letter-spacing: 0.5px;
        }

        @keyframes marquee {
            0% {
                transform: translate(0, 0);
            }

            100% {
                transform: translate(-100%, 0);
            }
        }

        #map {
            height: 600px;
            width: 100%;
            z-index: 1;
            margin-bottom: 2rem;
            border-radius: 0.5rem;
            border: 1px solid #374151;
        }

