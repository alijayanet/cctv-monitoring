<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#1a202c">
    <link rel="manifest" href="/manifest.json">
    <link rel="apple-touch-icon" href="/icon-192x192.png">
    <title>
        <%= site.title %>
    </title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/hls.js@latest"></script>
    <style>
        body {
            background-color: #1a202c;
            color: #cbd5e0;
        }

        .video-container {
            position: relative;
            padding-bottom: 56.25%;
            height: 0;
            overflow: hidden;
        }

        .video-container video {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
    </style>
</head>

<body class="bg-gray-900 text-white min-h-screen">

    <nav class="bg-gray-800 p-4 shadow-lg mb-6">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-2xl font-bold text-green-400">
                <%= site.title %>
            </h1>
            <div>
                <a href="/" class="px-4 py-2 hover:bg-gray-700 rounded transition">Dashboard</a>
                <a href="/admin" class="px-4 py-2 hover:bg-gray-700 rounded transition">Login</a>
            </div>
        </div>
    </nav>

    <div class="container mx-auto px-4">
        <!-- Grid View -->
        <div id="cctv-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% cameras.forEach(function(camera) { %>
                <div
                    class="bg-gray-800 rounded-lg overflow-hidden shadow-xl border border-gray-700 transition hover:border-green-500">
                    <div class="p-3 bg-gray-900 border-b border-gray-700 flex justify-between items-center">
                        <div class="flex items-center gap-2">
                            <span id="status-dot-<%= camera.id %>" class="w-3 h-3 rounded-full bg-gray-600"></span>
                            <h2 class="font-semibold text-lg">
                                <%= camera.nama %>
                            </h2>
                        </div>
                        <div class="text-right">
                            <span id="status-text-<%= camera.id %>"
                                class="text-[10px] uppercase font-bold text-gray-500 block">Checking...</span>
                            <span class="text-[10px] text-gray-500 block">
                                <%= camera.lokasi || 'Unknown' %>
                            </span>
                        </div>
                    </div>
                    <div class="relative w-full aspect-video bg-black group">
                        <video id="video-<%= camera.id %>" class="w-full h-full object-cover" controls autoplay muted
                            playsinline crossorigin="anonymous"></video>
                        <!-- Snapshot Button -->
                        <button onclick="takeSnapshot('<%= camera.id %>', '<%= camera.nama %>')"
                            class="absolute top-2 right-2 bg-green-600 hover:bg-green-700 text-white p-2 rounded-full shadow-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300 z-10"
                            title="Take Snapshot">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z">
                                </path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                        </button>
                        <div
                            class="absolute inset-0 flex items-center justify-center pointer-events-none opacity-0 hover:opacity-100 transition duration-300">
                            <div class="bg-black bg-opacity-50 p-2 rounded text-white text-sm">Waiting for stream...
                            </div>
                        </div>
                    </div>
                </div>
                <script>
                    (function () {
                        var video = document.getElementById('video-<%= camera.id %>');
                        var baseUrl = window.location.protocol + '//' + window.location.hostname + ':<%= hls_port %>';
                        // Try transcoded stream first (H.264), fallback to raw input
                        var transcodedSrc = baseUrl + '/cam_<%= camera.id %>/index.m3u8';
                        var fallbackSrc = baseUrl + '/cam_<%= camera.id %>_input/index.m3u8';
                        var usedFallback = false;

                        function initHls(src) {
                            if (Hls.isSupported()) {
                                var hls = new Hls({
                                    debug: false,
                                    lowLatencyMode: true,
                                    manifestLoadingTimeOut: 5000,
                                    manifestLoadingMaxRetry: 2,
                                    manifestLoadingRetryDelay: 1000
                                });
                                hls.loadSource(src);
                                hls.attachMedia(video);
                                hls.on(Hls.Events.MANIFEST_PARSED, function () {
                                    video.play().catch(function (e) { console.log('Autoplay blocked', e); });
                                });
                                hls.on(Hls.Events.ERROR, function (event, data) {
                                    if (data.fatal) {
                                        switch (data.type) {
                                            case Hls.ErrorTypes.NETWORK_ERROR:
                                                // If transcoded stream not available, try raw input
                                                if (!usedFallback && src === transcodedSrc) {
                                                    console.log('Transcoded stream not available for cam_<%= camera.id %>, trying raw input...');
                                                    usedFallback = true;
                                                    hls.destroy();
                                                    initHls(fallbackSrc);
                                                } else {
                                                    // Already on fallback or fallback stream, retry
                                                    setTimeout(function () { hls.startLoad(); }, 3000);
                                                }
                                                break;
                                            case Hls.ErrorTypes.MEDIA_ERROR:
                                                hls.recoverMediaError();
                                                break;
                                            default:
                                                hls.destroy();
                                                break;
                                        }
                                    }
                                });
                            } else if (video.canPlayType('application/vnd.apple.mpegurl')) {
                                // Safari native HLS - supports H.265 natively via fMP4
                                video.src = fallbackSrc;
                                video.addEventListener('loadedmetadata', function () {
                                    video.play();
                                });
                            }
                        }

                        initHls(transcodedSrc);
                    })();
                </script>
                <% }); %>
        </div>
    </div>

    <script>
        // Global Status Polling
        async function updateStatus() {
            try {
                const response = await fetch('/api/status');
                const data = await response.json();

                Object.keys(data.cameras).forEach(id => {
                    const status = data.cameras[id];
                    const dot = document.getElementById(`status-dot-${id}`);
                    const text = document.getElementById(`status-text-${id}`);

                    if (dot && text) {
                        if (status.online) {
                            dot.classList.remove('bg-gray-600', 'bg-red-500', 'bg-purple-500');
                            const tc = data.transcode && data.transcode[id];
                            if (tc && tc.transcoded) {
                                dot.classList.add('bg-purple-500', 'animate-pulse');
                                text.innerText = 'H.264';
                                text.classList.remove('text-gray-500', 'text-red-500', 'text-green-500');
                                text.classList.add('text-purple-400');
                            } else {
                                dot.classList.add('bg-green-500', 'animate-pulse');
                                text.innerText = 'ONLINE';
                                text.classList.remove('text-gray-500', 'text-red-500', 'text-purple-400');
                                text.classList.add('text-green-500');
                            }
                        } else {
                            dot.classList.remove('bg-gray-600', 'bg-green-500', 'bg-purple-500', 'animate-pulse');
                            dot.classList.add('bg-red-500');
                            text.innerText = 'OFFLINE';
                            text.classList.remove('text-gray-500', 'text-green-500', 'text-purple-400');
                            text.classList.add('text-red-500');
                        }
                    }
                });
            } catch (err) {
                console.error('Status poll error:', err);
            }
        }

        setInterval(updateStatus, 10000);
        updateStatus();

        // Snapshot function
        function takeSnapshot(cameraId, cameraName) {
            const video = document.getElementById('video-' + cameraId);
            if (!video || video.readyState < 2) {
                alert('Video not ready yet. Please wait for the stream to load.');
                return;
            }

            const canvas = document.createElement('canvas');
            canvas.width = video.videoWidth || 1280;
            canvas.height = video.videoHeight || 720;
            const ctx = canvas.getContext('2d');
            ctx.drawImage(video, 0, 0, canvas.width, canvas.height);

            // Add timestamp overlay
            ctx.fillStyle = 'rgba(0, 0, 0, 0.5)';
            ctx.fillRect(10, canvas.height - 40, canvas.width - 20, 30);
            ctx.fillStyle = '#ffffff';
            ctx.font = '16px Arial';
            ctx.fillText(cameraName + ' - ' + new Date().toLocaleString('id-ID'), 20, canvas.height - 20);

            // Download image
            const link = document.createElement('a');
            link.download = `snapshot_${cameraName.replace(/\s+/g, '_')}_${Date.now()}.png`;
            link.href = canvas.toDataURL('image/png');
            link.click();
        }

        // Register Service Worker for PWA
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/sw.js')
                    .then((registration) => {
                        console.log('SW registered:', registration);
                    })
                    .catch((error) => {
                        console.log('SW registration failed:', error);
                    });
            });
        }
    </script>

    <footer class="mt-12 py-6 bg-gray-900 border-t border-gray-800 text-center text-gray-500 text-sm">
        <%= site.footer %>
    </footer>

</body>

</html>